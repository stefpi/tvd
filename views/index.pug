        form(
            class='column'
            id='inputs'
            action='/'
            method='post'
            enctype='multipart/form-data'
        )
            div(class='row' id='column-header')
                div(class='title')
                    p tvd
                    p(class='title-separator') :
                    p bulk twitch clip download
            div(class='row' id='column-body-1')
                div(class='file-input-padding')
                    div(class='file-input-header')
                        p Option 1. Input Text File
                    div(class='file-input-body-example')
                        p(class='example-title') example 'clips.txt' :
                        div(id='file-example')
                            p(class='example-links-1') https://www.twitch.tv/nairomk/clip/FastBlatantAntPeteZarollTie
                            p(class='example-links-2') https://www.twitch.tv/noelmiller/clip/ScrumptiousTransparentTomatoPartyTime
                            p(class='example-links-1') https://www.twitch.tv/s1mple/clip/RepleteEnthusiasticMageCeilingCat
                            p(class='example-links-2') https://www.twitch.tv/codyko/clip/VivaciousTenaciousSquirrelHumbleLife
                            p(class='example-links-3') https://www.twitch.tv/loltyler1/clip/LongMildConsoleFreakinStinkin
                    div(class='input-body')
                        p(id='file-input-label') your turn!
                        input(
                            type='file'
                            name='userFile'
                            id='fileupload'
                        )
                        label(for='fileupload' id='upload-button') [choose a file]
                        div(class='footline')
                            p
            div(class='row' id='column-body-2')
                div(class='file-input-padding')
                    div(class='file-input-header')
                        p Option 2. Input Links Here
                    div(class='input-body')
                        textarea(
                            class='text-input-area'
                            id='textarea'
                            name='textarea'
